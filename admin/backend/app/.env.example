# 服务器配置
HOST=127.0.0.1
PORT=8000

# 数据库配置
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/blog

# MySQL settings
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=blog

# JWT配置
SECRET_KEY=your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 上传文件配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp"]
ALLOWED_DOCUMENT_TYPES=["application/pdf", "application/msword", "application/vnd.openxmlformats-officedocument.wordprocessingml.document"]

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_EXPIRE_IN_SECONDS=3600

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:9000"]
CORS_ALLOW_CREDENTIALS=true

# 七牛云配置
QINIU_ACCESS_KEY=your-access-key
QINIU_SECRET_KEY=your-secret-key
QINIU_BUCKET_NAME=your-bucket-name
QINIU_DOMAIN=http://cdn.example.com
QINIU_BUCKET_DOMAIN=http://bucket.u.qiniucs.com
QINIU_CALLBACK_URL=http://api.example.com/upload/callback  # 可选