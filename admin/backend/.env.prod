# 生产环境配置

# 服务器配置
HOST=0.0.0.0  # 生产环境监听所有网络接口
PORT=8000

# MySQL 配置
MYSQL_USER=root
MYSQL_PASSWORD=your_production_db_password  # 请修改为生产环境的强密码
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=blog_prod_db
DATABASE_URL=mysql+pymysql://root:your_production_db_password@localhost:3306/blog_prod_db

# JWT配置
SECRET_KEY=your_production_secret_key  # 请修改为生产环境的强密钥
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 上传文件配置
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/gif"]
ALLOWED_DOCUMENT_TYPES=["application/pdf","application/msword","application/vnd.openxmlformats-officedocument.wordprocessingml.document"]

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_EXPIRE_IN_SECONDS=3600  # 1小时

# 日志配置
LOG_LEVEL=INFO  # 生产环境使用 INFO 级别
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS配置
CORS_ORIGINS=["https://your-frontend-domain.com"]  # 请修改为实际的前端域名
CORS_ALLOW_CREDENTIALS=true

# 七牛云配置
QINIU_ACCESS_KEY=your_production_access_key  # 请替换为生产环境的 Access Key
QINIU_SECRET_KEY=your_production_secret_key  # 请替换为生产环境的 Secret Key
QINIU_BUCKET_NAME=yingzi-storage  # 生产环境的存储空间名称
QINIU_DOMAIN=https://your-custom-domain.com  # 请替换为您的自定义域名，必须使用 HTTPS
QINIU_BUCKET_DOMAIN=https://your-custom-domain.com  # 请替换为您的自定义域名，必须使用 HTTPS